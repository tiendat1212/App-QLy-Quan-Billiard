@model QuanLyQuanBilliard.Models.EF.Luong

<form id="form-create-edit" asp-action="Save" method="post" onsubmit="return jQueryAjaxPost(this)">
    <input type="hidden" asp-for="LuongId" />

    <div class="form-group">
        <label for="NhanVienId">Nhân Viên</label>
        <select asp-for="NhanVienId" class="form-control" asp-items="@(new SelectList(ViewBag.NhanVienList, "NhanVienId", "TenNhanVien"))" required onchange="getLuongCoBan(this.value)">
        </select>
    </div>

    <div class="form-group">
        <label for="Thang">Tháng</label>
        <input asp-for="Thang" class="form-control" type="month"
               value="@(Model.Thang != default ? Model.Thang.ToString("yyyy-MM") : DateTime.Now.ToString("yyyy-MM"))"
               required />
    </div>
    
    <div class="form-group">
        <label for="LuongCoBan">Lương Cơ Bản</label>
        <input asp-for="LuongCoBan" id="LuongCoBan" class="form-control" type="number" step="1" required />
    </div>
    <div class="form-group">
        <label for="Thuong">Thưởng</label>
        <input asp-for="Thuong" class="form-control" type="number" step="1" required />
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="closeModal()">Đóng</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>
